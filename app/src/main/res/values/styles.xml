<resources>
    <style name="AppTheme" parent="AppThemeParent" >
        <item name="android:statusBarColor">#0D050000</item>
    </style>

    <style name="AppTheme.HorizontalButtonAppearance" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.OutlineButtonAppearance" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextInputLayouts" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="AppTheme.TextAppearance.HyperLinkTextView" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="AppTheme.TextAppearance.PageHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.PageHeader.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="fontFamily">@font/lato_black</item>
    </style>

    <style name="AppTheme.TextAppearance.TextInputLayoutOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.TextInputLayoutStyleOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:theme">@style/AppTheme.TextAppearance.TextInputLayoutOutline</item>
    </style>



</resources>
